<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:layout_marginTop="@dimen/_2dp"
    android:background="@color/write">

    <ImageView
        android:id="@+id/iv_activity_bottle_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/hard"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_activity_bottle_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_activity_bottle_item_area"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text=""
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_activity_bottle_item_final_msg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:ems="16"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:text=""
            android:textColor="#ababab"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_bottle_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#ababab"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wei_du_xiao_xi"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_activity_bottle_item_time"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/wdxx"
        android:gravity="center"
        android:text="1"
        android:textColor="#5c7a9e"
        android:textSize="10sp" />

</RelativeLayout>