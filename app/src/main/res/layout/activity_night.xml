<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_moon"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:padding="@dimen/_20dp"
            android:src="@drawable/yueliangong"/>
        <ImageView
            android:id="@+id/iv_shape"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/anim" />
        <ImageView
            android:id="@+id/iv_shape_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_shape_right"
            android:layout_alignRight="@+id/iv_shape_right"
            android:layout_alignTop="@+id/iv_shape"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:src="@drawable/animcentre"
            android:visibility="visible"/>



        <ImageView
            android:id="@+id/iv_shape_right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:visibility="visible"
            android:layout_marginRight="20dp"
            android:src="@drawable/anim_right" />

    </RelativeLayout>
</LinearLayout>

